{
  "name": "gha-auto-dependabot-rebase",
  "version": "0.0.0",
  "description": "Github Action to automatically request dependabot rebases",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "lint": "tsc --noEmit",
    "pretest": "npm run lint",
    "test": "xo && echo 'No tests yet'",
    "codegen": "graphql-codegen --config codegen.yml",
    "precompile": "rm -rf dist && npm run codegen",
    "compile": "webpack-cli --config=webpack.config.cjs",
    "dependabump": "ncu -u && rm -rf package-lock.json node_modules | true && npm i",
    "prerelease": "npm run compile",
    "release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bbeesley/gha-auto-dependabot-rebase.git"
  },
  "keywords": [
    "github",
    "actions",
    "build",
    "merge",
    "publish",
    "test"
  ],
  "author": "Bill Beesley <bill@beesley.dev>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bbeesley/gha-auto-dependabot-rebase/issues"
  },
  "homepage": "https://github.com/bbeesley/gha-auto-dependabot-rebase#readme",
  "devDependencies": {
    "@actions/cache": "^3.0.6",
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/node": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-stage-0": "^7.8.3",
    "@babel/preset-typescript": "^7.18.6",
    "@beesley/tsconfig": "^1.1.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@graphql-codegen/cli": "2.16.2",
    "@graphql-codegen/introspection": "2.2.1",
    "@graphql-codegen/typescript": "2.8.2",
    "@graphql-codegen/typescript-document-nodes": "2.3.7",
    "@graphql-codegen/typescript-operations": "^2.5.7",
    "@graphql-codegen/typescript-resolvers": "2.7.7",
    "@octokit/graphql-schema": "^12.30.1",
    "@octokit/webhooks-definitions": "^3.67.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.6",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/jest": "^29.2.3",
    "babel-jest": "^29.3.1",
    "conventional-changelog-angular": "^5.0.13",
    "conventional-commit-types": "^3.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "documentation": "^14.0.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "npm-check-updates": "^16.4.1",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0",
    "xo": "^0.53.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "docs",
              "release": "patch"
            },
            {
              "type": "refactor",
              "release": "patch"
            },
            {
              "type": "chore",
              "scope": "deps*",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md",
            "README.md",
            "dist/**",
            "src/generated/graphql.ts"
          ]
        }
      ]
    ]
  },
  "xo": {
		"ignores": ["dist", "src/generated"],
    "space": true,
    "prettier": true,
    "rules": {
			"capitalized-comments": "off",
			"import/extensions": "off",
			"func-names": ["error", "always"],
      "@typescript-eslint/no-implicit-any-catch": "off"
		}
	}
}
